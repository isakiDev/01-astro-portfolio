---
import { type TimeLineData } from "./time-line.interface";

interface Props {
  extraDetails: TimeLineData["extraDetails"];
}

const { extraDetails } = Astro.props;
---

<div class="space-y-4 mt-2">
  {
    extraDetails?.map(({ description, title, url }) => {
      return (
        <div>
          {title && <h4>{title}</h4>}

          {Array.isArray(description) ? (
            <ul class="list-disc ml-4 text-neutral-400">
              {description?.map((desc) => (
                <li class="text-base font-normal">{desc}</li>
              ))}
            </ul>
          ) : (
            <p class="mb-4 text-base font-normal">{description}</p>
          )}

          {url && (
            <a
              href={url}
              target="_blank"
              class="ml-auto py-1.5 px-3 bg-tertiary hover:bg-white/10 p-2 rounded-xl text-white/80 hover:cursor-pointer hover:text-white transition-all duration-300"
            >
              Leer mas
            </a>
          )}
        </div>
      );
    })
  }
</div>
