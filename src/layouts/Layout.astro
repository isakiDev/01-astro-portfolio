---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/face_memoji.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  body {
    @apply bg-primary;
  }

  h1 {
    @apply text-2xl font-semibold text-neutral-200;
  }

  h3 {
    @apply text-lg font-semibold text-neutral-200;
  }

  h2 {
    @apply text-2xl font-semibold text-neutral-200;
  }

  h4 {
    @apply text-base font-semibold text-neutral-300;
  }

  p {
    @apply text-neutral-400;
  }

  .animate-pulse-fade-in {
    animation: pulse-fade-in 0.6s ease-out both;
    animation-delay: 1;
  }

  .animate-duration-500 {
    animation-duration: 0.5s;
  }

  .animate-delay-200 {
    animation-delay: 0.2s;
  }

  .animate-delay-300 {
    animation-delay: 0.3s;
  }

  @keyframes pulse-fade-in {
    0% {
      transform: scale(0.9);
      opacity: 0;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.5;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
